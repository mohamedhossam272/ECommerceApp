@{
    ViewData["Title"] = "Check Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body text-center">
                    <p>Password reset link has been sent to your email. Please check your inbox :)</p>
                    <a href="https://ethereal.email/messages" class="btn btn-primary mt-3">Click here to view Ethereal emails</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
